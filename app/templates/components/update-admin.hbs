<!-- we’ve bound the action update to the “Save” button -->
{{#if updateAdminForm}}
 <h4>Update</h4>
<div>
   <form>
     <div class="form-group">
       <label for="contact_name">Contact_name</label>
       {{input value=contact_name  id="contact_name" placeholder=admin.contact_name}}
     </div>

     <div class="form-group">
       <label for="contact_no">Contact_no</label>
       {{input value=contact_no id="contact_no" placeholder=admin.contact_no}}
     </div>
     <button {{action 'update' admin}}>Save</button>
         </form>
       </div>
     {{else}}
       <button {{action 'updateAdminForm'}}>Edit</button>
     {{/if}}
