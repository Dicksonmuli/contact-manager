<!-- we’ve bound the action update to the “Save” button -->
{{#if updateContactForm}}
  <h4>Update</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="contact_name">Contact_name</label> {{input value=contact_name  id="contact_name" placeholder=contact.contact_name}}
      </div>

      <div class="form-group">
        <label for="contact_no">Contact_no</label> {{input value=contact_no id="contact_no" placeholder=contact.contact_no}}
      </div>
      <button {{action 'update' contact}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateContactForm'}}>Update</button>
{{/if}}
