<li>
	<div class="media boxshadow">
	    <div class="media-left">
	      <img src="https://cdn3.iconfinder.com/data/icons/rcons-user-action/32/boy-512.png" class="media-object" style="width:50px; border-radius: 100px">
				{{message.name}}
	    </div>
	    <div class="media-body">
	      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do</p> <p>{{message.content}}</p>
				 <hr>
				 {{#if replyShowing}}
				 	{{#each message.reply as |reply|}}
					{{reply.content}}
					{{reply.file}}
					{{/each}}
					<form>
  				<div class="form-group">
    				{{input type="file" id="file" value=file}}{{input value=content class="form-control" id="content" placeholder="Reply.."}}<button {{action 'saveReply'}} class="btn">Send</button>
  				</div>
				</form>
				 {{else}}
				 <span type="button" {{action 'reply'}}><i class="fa fa-commenting"></i>Reply</span>
				 {{/if}}
	    </div>
	  </div>


</li>
