<!-- including the new contact button -->
<!-- to allow one to pass a number of attributes -->
{{#if addNewContact}}
<h4>New Contact</h4>
<div>
    <form>
      <div class="form-group">
        <label for="contact_name">Contact_name</label>
        {{input value=contact_name id="contact_name"}}
      </div>

      <div class="form-group">
        <label for="contact_no">Contact_no</label>
        {{input value=contact_no id="contact_no"}}
      </div>
  <button {{action 'saveContact1' contact}} class="btn btn-success">Save</button>
  </form>
</div>
{{else}}
  <button {{action 'contactFormShow'}} class="btn btn-primary">New Contact</button>
{{/if}}
